{
    "compilerOptions": {
        "alwaysStrict": false,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strict": false,
        "strictBindCallApply": false,
        "strictFunctionTypes": false,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "module": "commonjs",
        "target": "ESNext",
        "outDir": "dist",
        "lib": [
            "es2016",
            "ES2017",
            "ESNext",
            "ESNext.Array",
            "ESNext.AsyncIterable",
            "ESNext.Intl",
            "ESNext.Symbol",
            "DOM"
        ],
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./",
        "paths": {
            "@Utils/*": [
                "src/Utils/*"
            ],
            "@root/*": [
                "src/*"
            ]
        },
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}